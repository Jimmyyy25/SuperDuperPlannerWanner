@model SuperDuperPlannerWanner.Models.CreatePlanViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Plan.Name" class="control-label"></label>
                <input asp-for="@Model.Plan.Name" class="form-control" />
                <span asp-validation-for="@Model.Plan.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Plan.Description" class="control-label"></label>
                <input asp-for="@Model.Plan.Description" class="form-control" />
                <span asp-validation-for="@Model.Plan.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Plan.TypeId" class="control-label"></label>
                <select asp-for="@Model.Plan.TypeId" asp-items="@Model.PlanTypes" class="form-control"></select>
                <span asp-validation-for="@Model.Plan.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewPlans">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
