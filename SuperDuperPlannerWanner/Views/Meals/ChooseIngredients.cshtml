@model List<SuperDuperPlannerWanner.Models.Ingredient>

@{
    ViewData["Title"] = "Choose Ingredients";
}

<h1>Choose Ingredients</h1>

<div>
    <a asp-action="EditMeal">Back</a>
</div>

<form asp-action="ChooseIngredients">
    <table class="table">
        <thead>
            <tr>
                @{Ingredient ingredient = Model[0];}
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].IngredientTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DateAdded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DateAmended)
                </th>
                <th>
                   @* @Html.DisplayNameFor(model => model[0].Selected)*@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IngredientTypeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAmended)
                    </td>
                    <td>
                        @*@Html.CheckBoxFor(modelItem => item.Selected)*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>